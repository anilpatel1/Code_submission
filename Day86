class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0 || (x%10==0 && x!=0)){
            return false;
        }
        int r=0;
        while(x>r){
            int lastdigit = x%10;
            r = (r*10)+lastdigit;
            x=x/10;
        }
        if(x==r || x==r/10){
                return true;
        }
        return false;
    }
};
